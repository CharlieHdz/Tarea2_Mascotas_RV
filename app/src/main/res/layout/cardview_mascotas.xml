<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="@dimen/activy_vertical"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    card_view:cardCornerRadius="@dimen/corner_radius"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/miActionBar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMasc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/miActionBar"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activy_vertical"
            android:src="@drawable/dog" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="@dimen/like_bone"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/corner_radius"
                android:src="@drawable/bone"
                android:scaleType="fitCenter"
                android:background="@color/cardview_light_background"
                android:onClick="Like"
                />

            <TextView
                android:id="@+id/tvNombreMasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/text_sep"
                android:text="@string/nombre"
                android:textSize="@dimen/nombre_cardview"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_Likes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/text_sep_left"
                android:text="@string/likes"
                android:textSize="@dimen/likes"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLikes"
                android:layout_width="@dimen/like_bone"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/corner_radius"
                android:src="@drawable/bone_dorado"
                />


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>